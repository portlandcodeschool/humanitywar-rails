.entries.cf
  %a{href: '#', id: "entry-#{@entries[0].id}", :'data-lose_id' => @entries[1].id}
    .entry
      .black-card
        = @entries[0].black_card
        .icon
          Cards Against Humanity
      - @entries[0].white_cards.each do |card|
        .white-card
          = card
        .icon
          Cards Against Humanity

  .vs
