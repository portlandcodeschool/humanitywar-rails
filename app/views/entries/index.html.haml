    %br
    %br
    %a{href: '#'}
      %i.icon-refresh

  %a{href: '#', id: "entry-#{@entries[1].id}", :'data-lose_id' => @entries[0].id}
    .entry
      .black-card
        = @entries[1].black_card
        .icon
          Cards Against Humanity
      - @entries[0].white_cards.each do |card|
        .white-card
          = card
